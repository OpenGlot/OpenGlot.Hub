{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to .NET Core Docker (Remote)",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeCwd": "${workspaceFolder}/api",
                "pipeProgram": "docker",
                "pipeArgs": [
                    "exec",
                    "-i",
                    "openglothub-api-1"
                ],
                "debuggerPath": "/vsdbg/vsdbg",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/app": "${workspaceFolder}/api"
            },
        }
    ]
}
